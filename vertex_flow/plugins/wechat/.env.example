# 微信公众号插件环境变量配置

# ===== 微信公众号配置 =====
# 微信公众号Token（必填）
WECHAT_TOKEN=your_wechat_token_here

# 微信公众号AppID（可选，用于高级功能）
WECHAT_APP_ID=your_app_id_here

# 微信公众号AppSecret（可选，用于高级功能）
WECHAT_APP_SECRET=your_app_secret_here

# ===== Vertex Flow API配置 =====
# Vertex Flow Chat API地址（必填）
VERTEX_FLOW_API_URL=https://your-vertex-flow-api.com

# 默认工作流名称
DEFAULT_WORKFLOW=default_chat

# ===== 服务器配置 =====
# 服务器监听地址
SERVER_HOST=0.0.0.0

# 服务器监听端口
SERVER_PORT=8001

# ===== 功能开关 =====
# 启用MCP功能
ENABLE_MCP=true

# 启用搜索功能
ENABLE_SEARCH=true

# 启用多模态功能（图片处理）
ENABLE_MULTIMODAL=true

# 启用推理功能
ENABLE_REASONING=false

# ===== 消息处理配置 =====
# 最大消息长度
MAX_MESSAGE_LENGTH=2000

# 会话超时时间（秒）
SESSION_TIMEOUT=3600

# ===== 日志配置 =====
# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===== 部署相关配置 =====
# 域名（用于生成webhook URL）
DOMAIN=your-domain.com

# SSL证书路径（HTTPS部署时使用）
SSL_CERT_PATH=/path/to/cert.pem

# SSL私钥路径（HTTPS部署时使用）
SSL_KEY_PATH=/path/to/key.pem